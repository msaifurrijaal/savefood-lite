<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/small_100"
            android:paddingHorizontal="@dimen/normal_75"
            android:layout_marginStart="@dimen/small_125"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="@dimen/large_225"
            android:background="@drawable/item_left_side_chat"
            android:textSize="16sp"
            android:textColor="@color/black"
            tools:text="@string/hallo" />

    </LinearLayout>

</LinearLayout>