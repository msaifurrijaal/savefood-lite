<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="@dimen/normal_150"
    app:cardUseCompatPadding="true"
    android:layout_marginEnd="@dimen/normal_125">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/normal_100"
        android:paddingVertical="@dimen/normal_100"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/view_lines">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="@dimen/normal_100">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/iv_writer"
                    android:layout_width="@dimen/image_user_profile_normal"
                    android:layout_height="@dimen/image_user_profile_normal"
                    tools:src="@tools:sample/avatars"/>

                <TextView
                    android:id="@+id/tv_name_writer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="@tools:sample/full_names"
                    android:textColor="@color/black"
                    android:fontFamily="@font/poppins"
                    android:ellipsize="end"
                    android:textSize="@dimen/caption"
                    android:maxLines="2"
                    android:layout_marginStart="@dimen/small_100"/>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/default_text"
                tools:text="@tools:sample/lorem/random"
                android:fontFamily="@font/poppins_bold"
                android:maxLines="2"
                android:ellipsize="end"
                android:textSize="@dimen/body_1"
                android:textColor="@color/black"
                android:layout_marginTop="@dimen/small_100"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/yesterday"
                android:fontFamily="@font/poppins"
                android:textSize="@dimen/caption"
                android:textColor="@color/gray"
                android:layout_marginTop="@dimen/small_50" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2.2"
            android:orientation="vertical"
            android:layout_gravity="end">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/normal_100">

                <ImageView
                    android:id="@+id/iv_artikel"
                    android:layout_width="@dimen/image_user_profile_large"
                    android:layout_height="@dimen/image_user_profile_large"
                    tools:src="@tools:sample/backgrounds/scenic"
                    android:scaleType="centerCrop" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>